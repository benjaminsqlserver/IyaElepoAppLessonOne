@inherits IyaElepoApp.Layouts.MainLayoutComponent

@using Radzen
@using Radzen.Blazor
@using IyaElepoApp.Models.ConData
<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />

<RadzenHeader>
  <ChildContent>
    <div class="row justify-content-start align-items-center">
      <div class="col-6 d-flex align-items-center">
        <RadzenSidebarToggle Click="@SidebarToggle0Click">
        </RadzenSidebarToggle>
        <RadzenLabel Text="IyaElepoApp">
        </RadzenLabel>
      </div>
      <div class="col-6 text-right">
      </div>
    </div>
  </ChildContent>
</RadzenHeader>
<RadzenBody @ref="body0">
  <ChildContent>
    <RadzenContentContainer Name="main">
    @Body
    </RadzenContentContainer>
  </ChildContent>
</RadzenBody>
<RadzenSidebar @ref="sidebar0">
  <ChildContent>
    <RadzenPanelMenu style="height: 100%">
      <ChildContent>
        <RadzenPanelMenuItem Text="Customers" Path="customers">
        </RadzenPanelMenuItem>
        <RadzenPanelMenuItem Text="Customer Types" Path="customer-types">
        </RadzenPanelMenuItem>
        <RadzenPanelMenuItem Text="Products" Path="products">
        </RadzenPanelMenuItem>
        <RadzenPanelMenuItem Text="Product Sales" Path="product-sales">
        </RadzenPanelMenuItem>
        <RadzenPanelMenuItem Text="Product Suppliers" Path="product-suppliers">
        </RadzenPanelMenuItem>
        <RadzenPanelMenuItem Text="Product Supplies" Path="product-supplies">
        </RadzenPanelMenuItem>
        <RadzenPanelMenuItem Text="Product Types" Path="product-types">
        </RadzenPanelMenuItem>
      </ChildContent>
    </RadzenPanelMenu>
  </ChildContent>
</RadzenSidebar>
<RadzenFooter>
  <ChildContent>
    <RadzenLabel Text="IyaElepoApp, Copyright Ⓒ 2021">
    </RadzenLabel>
  </ChildContent>
</RadzenFooter>
